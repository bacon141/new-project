<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:background="#fff">

<!--    app:cardCornerRadius="4dp"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/experiment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Description"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/owner_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@+id/experiment_title"
            android:text="GaveTheGreat"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/experiment_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_toRightOf="@+id/owner_username"
            android:layout_below="@+id/experiment_title"
            android:text="Status: Open"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>